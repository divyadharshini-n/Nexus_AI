# Application
APP_NAME=AI PLC Platform
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./database/plc_platform.db
# Or for SQLite: postgresql://user:password@localhost:5432/plc_platform


# MongoDB (for document storage)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=plc_platform

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Perplexity API
PERPLEXITY_API_KEY=your-perplexity-api-key-here
PERPLEXITY_API_URL=https://api.perplexity.ai

# OpenAI (for embeddings)
OPENAI_API_KEY=your-openai-api-key-here

# Voice Recognition
VOICE_RECOGNITION_SERVICE=google  # or whisper

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=txt,pdf,docx,doc,wav,mp3

# Paths
MANUALS_PATH=../data/manuals
EMBEDDINGS_PATH=../data/embeddings
UPLOADS_PATH=../data/uploads
EXPORTS_PATH=../data/exports
REPORTS_PATH=../data/reports
SYSTEM_PROMPTS_PATH=../data/system_prompts
KNOWLEDGE_BASE_PATH=../data/knowledge_base

# Logging
LOG_LEVEL=INFO
LOG_FILE=../logs/app.log